<h1>New Album</h1>
<form action="<%= albums_url %>" method="post">
  <%= auth_token %>
  Title
    <input type="text" name="album[title]">
  <br>
  Band
  <select name="album[band_id]">
    <% @bands.each do |band| %>
      <option value="<%= band.id %>"><%= band.alias %></option>
    <% end %>
  </select>
  <br>
  Recording
    <input type="radio" name="band[recording]" value="studio">Studio
    <input type="radio" name="band[recording]" value="live">Live
  <br>
  <button method="submit">Add Album</button>
</form>
